<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:alpha="1"
    android:background="@android:color/white"
    tools:context="io.vivacity.beeshall.vivacity.FoodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@android:style/DeviceDefault.ButtonBar">

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="325dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal"
            android:hint="Enter a keyword"
            android:selectAllOnFocus="true"
            android:shadowDx="4"
            android:shadowDy="8"
            android:textColor="@color/themeColor"
            android:textSize="18dp"
            android:theme="@android:style/TextAppearance.Holo"></EditText>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/places_ic_search"
            android:backgroundTint="@color/themeColor" />
    </LinearLayout>
</FrameLayout>
